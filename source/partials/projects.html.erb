<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2 class="projects-h2">ðŸ’»ProjectsðŸ’»</h2>
        <div class="container-projects">
          <% data.projects.each do |project| %>
            <%= image_tag project.image, alt: "project image", class: "project-image" %>
            <div class="project-name">
              <h2><%= project.name %></h2>
